model tea {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String?
  company      String?
  dateConsumed DateTime? @db.Date
  style        String?
  rating       Int?     @db.Int
  preferences  String?
  caffeineLevel Int?    @db.Int
  notes        String?
  primaryColor String?
  secondaryColor String?
  favorite     Boolean? @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
